<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

 <mapper namespace="com.example.lesson04.dao.UserMapper">
 	<insert id="insertUser" parameterType="map">
 		INSERT INTO `new_user`
 		(
 			`name`
			,`yyyymmdd`
			,`email`
			,`introduce`
			,`createdAt`
			,`updatedAt`
 		)
 		VALUES
 		(
 			#{name}
 			,#{yyyymmdd}
 			,#{email}
 			,#{introduce}
 			, NOW()
 			, NOW()
 		)
 	</insert>
 	
 	<select id="selectLatestUser" resultType="com.example.lesson04.domain.User">
 		SELECT
 			`id`
 			,`name`
			,`yyyymmdd`
			,`email`
			,`introduce`
			,`createdAt`
			,`updatedAt`
		FROM
			`new_user`
		ORDER BY `id` DESC
		LIMIT 1
 	</select>
 	
 	<!-- 0: false, 0이 아닌 수: true(중복됨) -->
 	<select id="existUserByName" parameterType="string" resultType="boolean">
 		SELECT
 			COUNT(1)
 		FROM
 			`new_user`
 		WHERE
 			`name` = #{name} <!-- 자주 where절로 들어갈 때 그 필드를 index로 걸기 -->
 	</select>
 </mapper>